<style>
  .loading {
    position: fixed;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    z-index: 1;
  }

  .loading.off {
    display: none;
  }

  .loading .loading-indicator {
    position: absolute;
    left: 50%;
    top: 50%;
    margin-left: -60px;
    margin-top: -50px;
    width: 120px;
    height: 100px;
    border-radius: 6px;
    background-color: rgba(0, 0, 0, 0.8);
  }

  .loading .loading-indicator:after {
    display: block;
    content: ' ';
    position: absolute;
    top: 50%;
    left: 50%;
    margin-left: -18px;
    margin-top: -18px;
    width: 36px;
    height: 36px;
    background: url(data:image/png;base64,) no-repeat 50% 50%;
    -webkit-animation: rotate 1s linear infinite;
  }

  @-webkit-keyframes rotate {
    from {
      -webkit-transform: rotateZ(0deg);
    }
    to {
      -webkit-transform: rotateZ(360deg);
    }
  }
</style>
<div class="loading">
  <div class="loading-indicator"></div>
</div>