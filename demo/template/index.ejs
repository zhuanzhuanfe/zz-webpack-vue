<!DOCTYPE html>
<html>

<head>
  <meta charset="utf-8">
  <meta name="viewport" content="width=device-width,initial-scale=1.0">
  <title>{{ name }}</title>
  <script>
    //font-size px add to html, you can remove this code if your project is just for PC
    !function (a, d) { var b = a.documentElement, c = function () { var a = b.clientWidth; a && (b.style.fontSize = a / 375 * 20 + "px") }; d.addEventListener("onorientationchange" in window ? "orientationchange" : "resize", function () { setTimeout(function () { c() }, 100) }, !1); c(); }(document, window);
    //动态加载微信脚本库
    if (/MicroMessenger/.test(window.navigator.userAgent)) {
      document.write('<script src="https://res.wx.qq.com/open/js/jweixin-1.0.0.js"><' + '\/script>');
    }
  </script>
  <style>
    body,
    h1,
    h2,
    h3,
    h4,
    h5,
    h6,
    hr,
    p,
    blockquote,
    dl,
    dt,
    dd,
    ul,
    ol,
    li,
    pre,
    form,
    fieldset,
    legend,
    button,
    input,
    textarea,
    th,
    td {
      margin: 0;
      padding: 0;
      font-size: 14px;
    }

    html,
    body {
      width: 100%;
      height: 100%;
    }

    body {
      font-family: "Helvetica Neue", Helvetica, Arial, "PingFang SC", "Hiragino Sans GB", "Heiti SC", "Microsoft YaHei", "WenQuanYi Micro Hei", sans-serif;
      -webkit-font-smoothing: antialiased;
      -moz-osx-font-smoothing: grayscale;
      -webkit-user-select: none;
      user-select: none;
    }

    ul,
    li,
    p,
    textarea,
    h1,
    h2,
    h3,
    h4 {
      list-style-type: none;
      margin: 0;
      padding: 0;
    }

    html,
    div,
    p,
    ul,
    li,
    form,
    span,
    h2,
    h3,
    h4 {
      user-select: none;
      word-wrap: break-word;
      word-break: break-all;
    }

    ul {
      list-style: none;
    }

    i,
    em {
      font-style: normal;
    }

    button {
      outline: none;
      border: none;
    }
  </style>
</head>

<body>
  <div id="app">
    <%- include ./template/common/loading.ejs %>
  </div>
  <!-- built files will be auto injected -->
</body>

</html>